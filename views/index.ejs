<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Auto World</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <header class="theHeader">
      <div class="headerleft">
          <h1 class="title">Auto World</h1>
          <div class="cars">Vehicles</div>
        </div>
    </header>
    <main>
      <section class="theForm">
        <h3 class="select-title">SELECT THE VEHICLE</h3>
        <form id="search-trade-form" method="GET" action="/search">
          <select name="brand" id="list-of-cars">
            <option value="AUDI">Audi</option>
            <option value="BMW">BMW</option>
            <option value="PORSCHE">Porsche</option>
            <option value="MERCEDES">Mercedes-Benz</option>
            <option value="VOLKSWAGEN">Volkswagen</option>
            <option value="KIA">KIA</option>
          </select>
          <select name="price" id="price-range">
            <option value="0">0$-5000$</option>
            <option value="5000">5000$-10000$</option>
            <option value="10000">10000$-30000$</option>
            <option value="30000">30000$-50000$</option>
            <option value="50000">50000$+</option>
          </select>
          <input id="submit" type="submit" value="SEARCH" class="search"/>
        </form>
      </section>

      <h1 class="vehicles-on-sale">VEHICLES ON SALE</h1>
      <div class="container" id="trade-container">
        <section class="shopping">
          <div class="shopping_subcontainer">
            <h4 class="shopping_heading">Audi S7</h4>
            <img src="../images/audiseven.png" class="shopping_image" alt="vehicle" class="vehicleimg"/>
          </div>
            <div class="information">
              <p>Year: 2019</p>
              <p>Price: 75,000$</p>
              <p>Status: ON SALE!</p>
              <p>Color: White</p>
              <p>Mileage: 14,000 km</p>
              <p>Transmission: automatic</p>
              <p>Fuel Type: Regular</p>
              <a href="/messages">
                <button class="send-a-message">SEND A MESSAGE</button>
              </a>
            </div>
        </section>
        <section class="shopping">
          <div class="shopping_subcontainer">
            <h4 class="shopping_heading">BMW 318i</h4>
            <img src="../images/bmw.webp" class="shopping_image" alt="vehicle" class="vehicleimg"/>
          </div>
            <div class="information">
              <p>Year: 2019</p>
              <p>Price: 75,000$</p>
              <p>Status: ON SALE!</p>
              <p>Color: White</p>
              <p>Mileage: 14,000 km</p>
              <p>Transmission: automatic</p>
              <p>Fuel Type: Regular</p>
              <a href="/messages">
                <button class="send-a-message">SEND A MESSAGE</button>
              </a>
            </div>
        </section>
      </div>
    </main>
    <footer>
      <p>Authors - Erik, Sanghwan, & Anshu</p>
    </footer>
  </body>
</html>
